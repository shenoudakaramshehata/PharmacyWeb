@page
@model Pharmacy.Areas.Admin.Pages.ClientsMessages.DetailsModel
@{
}

<<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["clientsMessagesDetails"]
                            <a asp-page="Index" class="btn btn-primary invers"> @sharedResource["Back"]</a>

                        </h2>
                        </div>
                    <div class="card-body">
                     
                        <br />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @sharedResource["Name"]
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ContactUsMessages.FullName)
                            </dd>
                            <dt class="col-sm-2">
                                @sharedResource["Tele"]
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ContactUsMessages.Mobile)
                            </dd>
                            <dt class="col-sm-2">
                                @sharedResource["Email"]
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ContactUsMessages.Email)
                            </dd>
                            <dt class="col-sm-2">
                                @sharedResource["Message"]
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ContactUsMessages.Message)
                            </dd>
                        </dl>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>