@page
@model Pharmacy.Areas.Admin.Pages.Newsletter22.IndexModel
@{
}
<div>
    <br />
    <br />
    <br />
    <br />
    <a class="btn btn-info" asp-page="Create">Create</a>
    @(Html.DevExtreme().DataGrid<Pharmacy.Models.Newsletter>()
    .DataSource(ds=>ds.Mvc()
    .Controller("Newsletter22")
    .LoadAction("Get")
    .Key("NewsletterId")
    )
    .Columns(columns=>
    {
        columns.AddFor(n => n.Email);

        columns.AddFor(n => n.Date);
        columns.Add().Caption(sharedResource["Actions"]).Width(200).Alignment(HorizontalAlignment.Center).CellTemplate(@<text>

                        <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-primary btn-sm"  href="/Admin/Newsletter22/Details?id=<%- data.NewsletterId %>"> <i class="fas fa-eye"></i> </a>
                                <a class="btn btn-success btn-sm"  href="/Admin/Newsletter22/Edit?id=<%- data.NewsletterId %>">  <i class="fas fa-edit"></i> </a>
                                <a class="btn btn-danger btn-sm" href="/Admin/Newsletter22/Delete?id=<%- data.NewsletterId %>">  <i class="fas fa-trash"></i> </a>
                            </div>
                            </text>).Width(200);

    })

    )
</div>