@page
@model Pharmacy.Areas.Admin.Pages.Categories.DetailsModel
@{
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Details"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">

                        <div style="padding-top:20px;padding-left:20px;padding-right:20px">
                            <div class="row">
                                <h4> @sharedResource["Informations"] </h4>
                                <hr />

                                <div class="col-md-12 col-lg-12 mt-4">

                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["TlAr"]  </dt>
                                        <dd class="col-sm-10"> @Model.category.CategoryTlAr </dd>
                                    </dl>
                                </div>

                                <div class="col-md-12 col-lg-12 mt-4">

                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["TlEn"]  </dt>
                                        <dd class="col-sm-10"> @Model.category.CategoryTlEn </dd>
                                    </dl>
                                </div>

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["Sort"]  </dt>
                                        <dd class="col-sm-10"> @Model.category.CategorySort </dd>
                                    </dl>
                                </div>
                                <br/>
                                <br/>
                                 <br/>
                                <br />
                                @{
                                    if (Model.category.SectionId != null)
                                    {
                                            <h4> @sharedResource["Section"] </h4>
                                            <hr />

                                            <div class="col-md-12 col-lg-12 mt-4">
                                                <dl class="row">
                                                    <dt class="col-sm-2">@sharedResource["TlAr"]  </dt>
                                                    <dd class="col-sm-10">
                                                        @Model.category.Section.SectionTlAr
                                                    </dd>
                                                </dl>
                                            </div>

                                            <div class="col-md-12 col-lg-12 mt-4">
                                                <dl class="row">
                                                    <dt class="col-sm-2">@sharedResource["TlEn"]  </dt>
                                                    <dd class="col-sm-10">
                                                        @Model.category.Section.SectionTlEn
                                                    </dd>
                                                </dl>
                                            </div>
                                       
                                    }


                                }
                               

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["IsActive"]  </dt>
                                        <dd class="col-sm-10">
                                            @Html.CheckBoxFor(m => m.category.IsActive.Value, new { @disabled = "disabled" })
                                        </dd>
                                    </dl>
                                </div>

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["Picture"]  </dt>
                                        <dd class="col-sm-10">
                                            <img style="border-radius: 13%;" width="250" height="250" class="img-fluid" src="~/Images/Category/@Model.category.CategoryPic" />
                                        </dd>
                                    </dl>
                                </div>

                            </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    
